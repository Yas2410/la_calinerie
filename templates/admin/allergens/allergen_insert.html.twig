{% extends 'admin/common/base.html.twig' %}

{% block content %}

    <section class="containerInsert">
        <div class="singleCatInsert xLarge-3 large-3 medium-6 small-9">
            <div class="formInsertChild">
            <p>Insérer un nouveau type d'allergène</p>
            <div>
                {{ form_start(formAllergen) }}

                {{ form_label(formAllergen.type) }}
                {{ form_widget(formAllergen.type, { 'attr' : {'class' : 'inputType'} }) }}
                {{ form_errors(formAllergen.type) }}

                <div>
                {{ form_widget(formAllergen.submit) }}
                </div>

                {{ form_end(formAllergen) }}
            </div>
            </div>
        </div>
        <div class="returnSmall">
            <a href="{{ path ('admin_allergens_list') }}">
                <i class="fa fa-reply"></i>
            </a>
        </div>
    </section>

{% endblock %}

