{% extends 'admin/common/base.html.twig' %}

{% block content %}

    <section class="containerInsert">
        <div class="singleCatInsert medium-10 small-12">
            <div class="details">
                <div class="date">
                    <h1>{{ menu.title }}</h1>
                </div>
                <div class=" xLarge-5 large-5 medium-10 small-11">
                    <a href="{{ asset('uploads/admin/menus/' ~ menu.file) }}" target="_blank">
                        <img src="{{ asset ('uploads/admin/menus/' ~ menu.image) }}" alt="Menu de la semaine" class="img-fluid">
                    </a>
                </div>
                <div class="text">
                    <p> {{ menu.content }}</p>
                </div>
                <div class="action">
                    <a href="{{ path ('admin_menu_update', {'id':menu.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="{{ path ('admin_menu_delete', {'id':menu.id}) }}">
                        <i class="fa fa-remove"></i>
                    </a>
                    <a href="{{ path ('admin_menus_list') }}">
                        <i class="fa fa-reply"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}