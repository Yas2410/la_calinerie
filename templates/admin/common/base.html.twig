<aside>
    <div class="menuDesk">
        <nav>
            <div class="imgMenu">
                <a href="{{ path('admin_dashboard') }}">
                    <img src="{{ asset('uploads/admin/img/logo.png') }}" alt="Logo La Calinerie" class="img-fluid">
                </a>
            </div>
            <span>Admin, Bonjour !</span>
            <ul>
                <li class="select"><a href="{{ path('admin_articles_list') }}">ARTICLES</a></li>
                <li class="select"><a href="{{ path('admin_events_list') }}">ÉVÈNEMENTS</a></li>
                <li class="select"><a href="{{ path('admin_pictures_list') }}">GALERIE</a></li>
