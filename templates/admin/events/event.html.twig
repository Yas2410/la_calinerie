{% extends 'admin/common/base.html.twig' %}

{% block content %}

    <section class="containerInsert">
        <div class="singleCatInsert medium-10 small-12">
            <div class="details">
                <div class="date">
                    <h1>{{ event.title }}</h1>
                    <p>{{ event.date|date('d/m/Y') }}</p>
                </div>
                <div class=" xLarge-5 large-5 medium-10 small-11">
                    {% if event.image %}
                        <img src="{{ asset ('uploads/admin/events/') ~ event.image }}" alt="image illustrant l'Ã©vÃ¨nement"
                             class="img-fluid">
                    {% endif %}
                </div>
                <div class="text">
                    <p> {{ event.content }}</p>
                </div>
                <div class="action">
                    <a href="{{ path ('admin_event_update', {'id':event.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="{{ path ('admin_event_delete', {'id':event.id}) }}">
                        <i class="fa fa-remove"></i>
                    </a>
                    <a href="{{ path ('admin_events_list') }}">
                        <i class="fa fa-reply"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}