{% extends 'admin/common/base.html.twig' %}

{% block content %}

    <section class="title-search">
        <h1>ENFANTS</h1>
        <div>
            {# Je fais appel à la route qui correspond à la recherche d'un enfant
             et je créé le formulaire de recherche #}
            <form action="{{ path('admin_child_search') }}" method="GET">
                <label>
                    <input class="searchBar" type="text" name="search" placeholder="RECHERCHER">
                </label>
                <button class="btnSearch" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </form>
        </div>
    </section>

    <section class="container">
        <div class="path xLarge-3 large-3 medium-5 small-9">
            <a href="{{ path ('admin_child_insert') }}">Créer une nouvelle fiche enfant</a>
        </div>
        <div class="singleCat xLarge-5 large-5 medium-10 small-9">
            {% for child in children %}
                <div class="singleCatContent">
                    <p> <b>{{ child.firstName }}</b> {{ child.lastName }}</p>
                    <a href="{{ path ('admin_child_show', {'id':child.id}) }}">
                        <i class="fa fa-eye"></i>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="return">
            <a href="{{ path ('admin_dashboard') }}">
                <i class="fa fa-reply"></i>
            </a>
        </div>
    </section>

{% endblock %}