{% extends 'admin/common/base.html.twig' %}

{% block content %}

    <section class="containerInsert">
        <div class="singleCatInsert xLarge-3 large-3 medium-6 small-9">
            <div class="formInsert">
                <div>
                    <p>Cr√©er une nouvelle fiche enfant</p>
                </div>
                {{ form_start(formChild) }}
                <div class="labelInsert">
                    {{ form_row(formChild.lastName) }}
                    {{ form_row(formChild.firstName) }}
                    <div class="dateInput">
                    {{ form_row(formChild.birthDate) }}
                    </div>
                    <div class="sexInput">
                    {{ form_row(formChild.sex) }}
                    </div>
                    {{ form_row(formChild.image) }}
                    <div class="allergenInput">
                    {{ form_row(formChild.allergen) }}
                    </div>
                    {{ form_row(formChild.user) }}
                </div>
                <div class="btnInsert">
                    {{ form_widget(formChild.submit) }}
                </div>
                {{ form_end(formChild) }}
            </div>
        </div>
        <div class="returnSmall">
            <a href="{{ path ('admin_children_list') }}">
                <i class="fa fa-reply"></i>
            </a>
        </div>
    </section>

{% endblock %}