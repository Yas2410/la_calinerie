{% extends 'admin/common/base.html.twig' %}

{% block content %}

    <section class="containerInsert">
        <div class="singleCatInsert xLarge-3 large-3 medium-6 small-9">
            <div class="formInsert">
                <div class="searchWord">
                    {# Je fais appel à ma key 'search' paramétrée dans mon fichier ChildController
                    afin de retourner le résultat de la recherche #}
                    <h2>Vous avez recherché : <span>{{ search }}</span></h2>
                </div>
                <div class="searchWord">
                    {% for child in children %}
                        <p> {{ child.firstName }} {{ child.lastName }} </p>
                        <a href="{{ path ('admin_child_show', {'id':child.id}) }}">
                            - Détails -
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="returnSmall">
            <a href="{{ path ('admin_children_list') }}">
                <i class="fa fa-reply"></i>
            </a>
        </div>
    </section>

{% endblock %}
