{% extends 'admin/base.html.twig' %}

{% block content %}

    <section class="firstBox">
        <div class="smallBox select2">
            <a href="{{ path('admin_allergens_list') }}">ALLERGÈNES</a>
        </div>
        <div class="smallBox select2">
            <a href="{{ path('admin_children_list') }}">ENFANTS</a>
        </div>
        <div class="smallBox select2">
            <a href="{{ path('admin_users_list') }}">FAMILLES</a>
        </div>
    </section>

    <section class="secondBox">
        <div class="bigBox">
            <p class="lastRegister">- LES DERNIERS ENFANTS INSCRITS -</p>
            {% for child in children %}
                <div class="flex">
                    <p>
                        <b>{{ child.lastName }}</b> {{ child.firstName }}
                    </p>
                    <div>
                        <a href="{{ path ('admin_child_show', {'id':child.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="bigBox">
            <p class="lastRegister">- LES DERNIERS COMPTES PARENTS CRÉÉS -</p>
            {% for user in users %}
                <div class="flex">
                    <p>
                        <b>{{ user.lastName }}</b> {{ user.firstName }}
                    </p>
                    <div>
                        <a href="{{ path ('admin_user_show', {'id':user.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}