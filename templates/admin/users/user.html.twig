{% extends 'admin/common/base.html.twig' %}

{% block content %}

    <section class="containerInsert">
            <div class="contactInfoParents">
                <h1>M. / Mme {{ user.lastName }} {{ user.firstName }} </h1>
                <div>
                    <p>
                        <b>Adresse(s) :</b> {{ user.address }}
                        {% if user.address2 %}
                            {{ user.address2 }}
                        {% endif %}
                    </p>
                    <p><b>Code Postal :</b> {{ user.zipcode }} </p>
                    <p><b>Ville :</b> {{ user.city }} </p>
                    <p>
                        <b>Téléphone(s):</b> {{ user.phoneNumber }}
                        {% if user.phoneNumber2 %}
                            {{ user.phoneNumber2 }}
                        {% endif %}
                    </p>
                    <p><b>Mail :</b> {{ user.email }} </p>
                </div>
            </div>
            <div class="allergenInfo">
                <h2>ENFANTS</h2>
                <div>
                    {% for child in user.children %}
                    <p>
                        {{ child.firstName }}
                        {% endfor %}
                    </p>
                </div>
            </div>
            <div class="actionCard">
                <a href="{{ path ('admin_user_update', {'id':user.id}) }}">
                    <i class="fa fa-edit"></i>
                </a>
                <a href="{{ path ('admin_user_delete', {'id':user.id}) }}">
                    <i class="fa fa-remove"></i>
                </a>
                <a href="{{ path ('admin_users_list') }}">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
    </section>

{% endblock %}
