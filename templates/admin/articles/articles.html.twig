{% for article in articles %}
<div>
    <h1>{{ article.title }}</h1>
    <div>
        <img src="{{ asset ('uploads/admin/articles/') ~ article.image}}" alt="">
    </div>
    <p> {{ article.content }}</p>
    <div><a class="delete" href="{{ path ('admin_delete_article', {'id':article.id}) }}"> - Supprimer l'article' - </a>
    </div>
    <div class="margin"><a class="update" href="{{ path ('admin_update_article', {'id':article.id}) }}"> - Modifier l'article' - </a></div>
    {% endfor %}
</div>
