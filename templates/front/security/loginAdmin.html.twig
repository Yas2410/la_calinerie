{% extends 'admin/common/baseLog.html.twig' %}

{% block content %}

    <section class="container xLarge-12 large-12 medium-12 small-12">

        <div class="xLarge-2 large-2 medium-3 small-5">
            <img src="{{ asset('uploads/admin/img/logo.png') }}" alt="Logo La Calinerie" class="img-fluid">
        </div>

        <form method="post">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="login">
                <h1>ESPACE ADMIN</h1>
                <h3>Veuillez vous authentifier</h3>

                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" required
                       autofocus>

                <label for="inputPassword">Mot de Passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <div class="btnLogin">
                    <button type="submit">
                        Se Connecter
                    </button>
                </div>

            </div>
        </form>

    </section>

{% endblock %}
