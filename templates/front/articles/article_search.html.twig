{% extends 'front/common/baseParents.html.twig' %}

{% block content %}

    <div class="resultSearch">
        <h2>Vous avez recherch√© : <span>{{ search }}</span></h2>
    </div>
    <section class="containerSectionDetails">
        <div class="sectionDetails">
            {% for article in articles %}
            <div class="unit">
                <h3>{{ article.title }}</h3>
                <h6>{{ article.date|date('d/m/Y') }}</h6>
                <div class="xLarge-5 large-5 medium-10 small-10">
                    <img src="{{ asset ('uploads/admin/articles/') ~ article.image }}"
                         alt="Photo illustrant l'article" class="img-fluid">
                </div>
                <p class="xLarge-6 large-6">{{ article.resume }} </p>
                <div>
                    <a href="{{ path('article', {'id':article.id}) }}">
                        Lire l'article
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="back">
            <a href="{{ path ('articles') }}">
                <i class="fa fa-reply"></i>
            </a>
        </div>
    </section>

{% endblock %}