{% extends 'front/common/baseParents.html.twig' %}

{% block content %}

    <section class="containerSectionDetails">
        <div class="sectionDetails">
            <div class="unit">
                <h3>{{ menu.title }}</h3>
                <div class=" menu xLarge-5 large-5 small-10">
                    <a href="{{ asset('uploads/admin/menus/' ~ menu.file) }}" target="_blank">
                        <img src="{{ asset ('uploads/admin/menus/' ~ menu.image) }}"
                             alt="Le Menu de la Semaine" class="img-fluid">
                    </a>
                </div>
                <div class="menu">
                    <a href="{{ asset('uploads/admin/menus/' ~ menu.file) }}" target="_blank">
                        <i class="fa fa-download"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="back">
            <a href="{{ path ('menus') }}">
                <i class="fa fa-reply"></i>
            </a>
        </div>
    </section>

{% endblock %}
